@page
@model Razor_Blog.Pages.CreateArticleModel
@{
ViewData["Title"] = "ایجاد مقاله جدید";
}

<div class="col-12 mb-3">
    @* @if (Model.ErrorMessage != null) *@
    @* { *@
    @* <div class="alert alert-danger"> *@
    @*     @Model.ErrorMessage *@
    @* </div> *@
    @* } *@
    @if(TempData["success"] != null)
    {
        <div class="alert alert-success">
            @TempData["success"]
        </div>
    }
    <div class="col-6 mr-auto ml-auto text-center">
        <h1 class="border-bottom">ایجاد مقاله جدید</h1>
    </div>
</div>

<form class="mr-auto ml-auto" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Title">عنوان</label>
            <input class="form-control" id="Title" name="Title">
        </div>
        <div class="form-group col-md-6">
            <label for="Picture">عکس</label>
            <input class="form-control" id="Picture" name="Picture">
        </div>
        <div class="form-group col-md-6">
            <label for="PictureAlt">متن عکس</label>
            <input class="form-control" id="PictureAlt" name="PictureAlt">
        </div>
        <div class="form-group col-md-6">
            <label for="PictureTitle">عنوان عکس</label>
            <input class="form-control" id="PictureTitle" name="PictureTitle">
        </div>
        <div class="form-group col-md-12">
            <label for="ShortDescription">توضیحات کوتاه</label>
            <textarea class="form-control" id="ShortDescription" name="ShortDescription"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="Body">توضیحات</label>
        <textarea rows="5" type="text" class="form-control" id="Body" name="Body"></textarea>
    </div>
    <button type="submit" class="btn btn-success">ارسال</button>
</form>

